<link rel="stylesheet" href="/css/home.css" />

<div class="home-container">
  <!-- //file upload from -->
  <h1>CSV Upload</h1>
  <form action="/file/uploads" method="POST" enctype="multipart/form-data">
    <label for="file-upload" class="custom-file-upload">Upload CSV</label>
    <input type="file" id="file-upload" name="csv" required />
    <button type="submit">Upload</button>
  </form>

  <!-- show all uploaded files -->
  <% for(let file of files){%> 
    <div class="uploaded-files">
      <ul>
        <a href="/file/view/<%= file._id %>"><%= file.fileName %></a>
        <a href="/file/delete/<%= file._id %>"><i class="fa-solid fa-trash"></i></a>
      </ul>
    </div>
    <%}%>
 

</div>


